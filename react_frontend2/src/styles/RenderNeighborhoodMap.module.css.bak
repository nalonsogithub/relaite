.mapContainer {
  height: 100%;
  width: 100%;
/*  max-width: 800px;*/
  margin: 0 auto;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Drop shadow */
  border-radius: 10px;
  background-color: #fff;
}

.leaflet-container {
  width: 10%;
  height: 10%; /* Control map height here */
  border-radius: 10px;
}

.controls {
  margin-top: 20px;
  text-align: center;
}

.inputField {
  padding: 10px;
  width: 70%;
  margin-right: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.submitButton,
.geoButton {
  padding: 10px 20px;
  margin: 10px;
  background-color: #007bff;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s ease;
}

.submitButton:hover,
.geoButton:hover {
  background-color: #0056b3;
}
