.questionContainer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 10px;
  border-radius: 10px;
  margin-bottom: 5px;
  width: 100%;
}

/*
@media only screen and (max-width: 480px) {
  .questionContainer {
    padding: 5px; 
    font-size: 12px; 
  }
}
*/

.question {
  color: #333;
  font-size: 16px; 
  text-align: left;
  flex-grow: 1;
}

.iconButton {
  background: none;
  border: none;
  cursor: pointer;
  font-size: 20px; 
  margin: 0 5px;
}

.iconButton.selected {
  color: #007bff;
}


.arrowLeft, .arrowRight {
  cursor: pointer;
  font-size: 20px; 
  padding: 10px;
  color: black;
  border-radius: 5px;
  width: 30px;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.viewImageButton {
  padding: 8px 16px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.viewImageButton:hover {
  background-color: #005bb5;
}



.seeRatingButton:hover {
  background-color: #218838;
}


.buttonGroup {
  display: flex;
  gap: 5px; 
}

.viewImageButton, .seeRatingButton {
  padding: 8px 16px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.viewImageButton:hover, .seeRatingButton:hover {
  background-color: #005bb5;
}

.seeRatingButton {
  background-color: #28a745;
}

.seeRatingButton:hover {
  background-color: #218838;
}


.userRating, .overallRating {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 90%;
  color: white;
  font-weight: bold;
}

.userRating {
  background-color: #007bff;
  border-radius: 10px 0 0 10px;
}

.overallRating {
  background-color: #28a745;
  border-radius: 0 10px 10px 0;
}


.ratingComparison {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 10;
  padding: 20px;
  box-sizing: border-box;
}

.ratingComparison h2 {
  margin-bottom: 20px;
  font-size: 20px;
  color: #333;
}

.navigationContainer {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  width: 100%;
  justify-items: center;
  align-items: center;
  padding: 10px 0;
  background-color: rgba(255, 255, 255, 0.9);
  position: absolute;
  bottom: 0;
}

.hideRatingContainer {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  position: absolute;
  bottom: 0;
  padding: 10px 0;
  background-color: rgba(255, 255, 255, 0.9);
}

.ratingComparison, .chart-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 85%;
}

.hideRatingContainer {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  position: absolute;
  bottom: 0;
  padding: 10px 0;
  background-color: rgba(255, 255, 255, 0.9);
}

.hideRatingButton {
  padding: 8px 16px;
  background-color: #28a745;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}

.hideRatingButton:hover {
  background-color: #218838;
}


/* Responsive Design Adjustments */
@media only screen and (max-width: 768px) {
  .background {
	  max-width: 100%;
	  max-height: 100%;
  }

  .question {
    font-size: 12px; 
  }

  .iconButton {
    font-size: 16px; 
  }

  .arrowLeft, .arrowRight {
    font-size: 18px; 
    width: 25px;
    height: 25px;
  }

  .viewImageButton {
    padding: 6px 12px; 
    font-size: 14px;
  }
	.ratingComparison {
		height: 80%;
	}
	.ratingComparison h2 {
	  margin-bottom: 5px;
	  font-size: 16px;
	  color: #333;
	}
	
}

@media only screen and (max-width: 480px) {
  .background {
	  max-width: 100%;
  }

  .question {
    font-size: 14px; 
  }

  .iconButton {
    font-size: 14px; 
  }

  .arrowLeft, .arrowRight {
    font-size: 16px; 
    width: 20px;
    height: 20px;
  }

  .viewImageButton, .seeRatingButton, .hideRatingButton {
    padding: 5px 10px; 
    font-size: 10px;
  }
  .grid {
	  width: 80%;
	
  }
	.ratingComparison {
		height: 90%;
	}
	.ratingComparison h2 {
	  margin-bottom: 5px;
	  font-size: 16px;
	  color: #333;
	}
	
}
