.modalOverlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modalContent {
  background-color: #fff;
  padding: 20px;
  border-radius: 8px;
  width: 70%; 
  height: 50%; 
/*
  max-width: 900px; 
  max-height: 600px; 
*/
  overflow-y: hidden;
  position: relative;
  
  display: flex;
  flex-direction: column;
/*  justify-content: space-between; */
}

.ChatBotContainer {
  height: 90%; 
  width: 100%; 
  display: flex;
  justify-content: center; 
  align-items: center; 
}

.headerContainer {
  display: flex;
  max-height: 20%;
  justify-content: space-between;
  align-items: center;
  padding: 10px;
  border-bottom: 1px solid #ddd;
}

.leftLogo,
.rightLogo {
  width: 70px; 
  height: 70px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo {
  max-width: 70px;
  max-height: 70px; 
}

.titleContainer {
  flex-grow: 1;
  text-align: center;
}

.title {
  font-size: 1.5rem; 
/*  font-size: 24px; */
  font-weight: bold;
  margin: 0;
}

